class Grammar:
    def __init__(self):
        # Initialize an empty dictionary to store the grammar rules
        self.rules = {}

    def add_rule(self, rule_name, rule):
        # Add a grammar rule to the dictionary
        self.rules[rule_name] = rule

    def get_rule(self, rule_name):
        # Get a grammar rule from the dictionary
        return self.rules.get(rule_name, "Unknown rule")
